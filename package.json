{
  "name": "zetapush",
  "version": "0.1.1-1",
  "description": "Zeta Push Next",
  "main": "index.js",
  "repository": "https://github.com/zetapush/zetapush",
  "author": "ci@zetapush.com",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "conventional-github-releaser": "^2.0.0",
    "cz-lerna-changelog": "^1.2.1",
    "husky": "^0.14.3",
    "lerna": "^2.8.0",
    "lint-staged": "^6.1.0",
    "node": "8.9",
    "prettier": "^1.10.2",
    "standard-version": "^4.3.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prettify": "prettier --write 'packages/*/{bin,src}/**/*.{js,ts}'",
    "release": "standard-version -p && conventional-github-releaser -p angular"
  },
  "lint-staged": {
    "packages/*/{bin,src}/**/*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
